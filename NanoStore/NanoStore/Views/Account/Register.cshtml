@model NanoStore.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="/Content/Admin/ArchitecUI/nanostore-ig.jpg" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="input-group mb-4">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input_user", @placeholder = "Email" })
                    </div>
                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control input_pass", @placeholder = "Contraseña" })
                    </div>
                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        </div>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input_pass", @placeholder = "Confirmar Contraseña" })
                    </div>

                    <div class="d-flex justify-content-center mt-4 login_container">
                        <input type="submit" value="Registrar" class="btn login_btn" />
                    </div>
                    <div class="d-flex justify-content-center mt-2 validation-messages">
                        @Html.ValidationSummary("", new { @class = "text-danger no-bullets" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
